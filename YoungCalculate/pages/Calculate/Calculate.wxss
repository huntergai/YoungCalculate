.content {
  display: flex;
  height: 100%;
  flex-flow: row wrap;
  font-family: "Microsoft YaHei";
}

.layout-top {
  width: 100%;
  align-self: flex-start;
  text-align: right;
}

.screen {
  width: 100%;
  font-size: 30px;
  word-break: break-all;
}

.layout-bottom {
  width: 100%;
  align-self: flex-end;
}

.btnGroup {
  display: flex;
  flex-direction: row;
  flex: 1;
  width: 100%;
  height: 4rem;
}

.item {
  width: 25%;
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: center;
  margin-top: 1px;
  margin-right: 1px;
  font-size: 60rpx;
}

.item:active {
  background-color: #f78d1d;
}

.orange {
  color: #fef4e9;
  background: #29bbb4;
  font-weight: bold;
}

.blue {
  color: #d9eef7;
  background-color: #4dcec8;
}

.iconBtn {
  display: flex;
}

.icon {
  display: flex;
  align-items: center;
  width: 100%;
  justify-content: center;
}

page {
  height: 100%;
}